# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=secure_auth_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_key_change_in_production
SESSION_EXPIRY=86400000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER="your-gmail"
EMAIL_PASS="your-Secret"
EMAIL_FROM="your-gmail"

# Security Configuration
CSRF_SECRET=your_super_secure_csrf_secret_key_change_in_production
OTP_EXPIRY=120000 # 2 minutes in milliseconds
ACCOUNT_LOCK_DURATION=300000 # 5 minutes in milliseconds
MAX_LOGIN_ATTEMPTS=5

# File Upload Configuration
MAX_FILE_SIZE=524288000 # 500MB in bytes
UPLOAD_PATH=./public/uploads 


GOOGLE_CLIENT_ID="your-Secret"
GOOGLE_CLIENT_SECRET="your-Secret"
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

FRONTEND_URL=http://localhost:3000
